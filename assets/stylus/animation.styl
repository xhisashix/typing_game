.anm-jelly
  transform-origin bottom center
  animation-name jelly
  animation-duration 4s
  animation-timing-function ease-in
  animation-iteration-count infinite
@keyframes jelly
  0%
    transform scale(1, 1)
  8%
    transform scale(1, 1)
  10%
    transform scale(1.1, 0.9)
  13%
    transform scale(0.9, 1.1)
  17.5%
    transform scale(1, 1)
  19%
    transform scale(1, 1)
  58%
    transform scale(1, 1)
  60%
    transform scale(1.1, 0.9)
  63%
    transform scale(0.9, 1.1)
  67.5%
    transform scale(1, 1)
  69%
    transform scale(1, 1)
  100%
    transform scale(1, 1)
.anm-flush
  animation-name flush
  animation-duration 0.4s
  animation-timing-function ease-in
  animation-iteration-count 1
@keyframes flush
  0%
    opacity 0
  30%
    opacity 0.7
  100%
    opacity 0
.anm-error
  animation shakeX 0.3s
  animation-iteration-count 3
@keyframes shakeX
  0%
    transform translateX(8px)
  25%
    transform translateX(0)
  75%
    transform translateX(8px)
  100%
    transform translateX(0)
@keyframes bounceIn
  0%
    opacity 0
    transform scale(0)
  50%
    opacity 0.7
    transform scale(1.2)
  60%
    opacity 1
    transform scale(0.6)
  80%
    transform scale(1.05)
  100%
    opacity 1
    transform scale(1)
.bounce
  animation bounce 0.6s ease infinite alternate
@keyframes bounce
  0%
    transform translateY(0px)
  100%
    transform translateY(-20px)
